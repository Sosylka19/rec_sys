{
    "version": 3,
    "name": "API Gateway",
    "port": 8080,
    "cache_ttl": "300s",
    "endpoints": [
        {
            "endpoint": "/db/health_check/",
            "method": "GET",
            "backend": [
                {
                    "url_pattern": "/health_check/",
                    "host": [ "http://db_service:8001" ]
                }
            ]
        },
        {
            "endpoint": "/ml/health_check/",
            "method": "GET",
            "backend": [
                {
                    "url_pattern": "/health_check/",
                    "host": [ "http://ml_service:8000" ]
                }
            ]   
        }
    ]
}